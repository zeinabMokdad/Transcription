<Window x:Class="AudioTranscriptionApp.Views.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AudioTranscriptionApp.Views"
        mc:Ignorable="d"
        Title="Settings" Height="420" Width="520" WindowStartupLocation="CenterOwner">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <TextBlock Text="API Settings" FontSize="20" FontWeight="SemiBold" />

        <ScrollViewer Grid.Row="1" Margin="0,20,0,0" VerticalScrollBarVisibility="Auto">
            <StackPanel VerticalAlignment="Top">
                <TextBlock Text="Subscription Key" />
                <TextBox Text="{Binding SubscriptionKey, UpdateSourceTrigger=PropertyChanged}" Margin="0,6,0,12" />

                <TextBlock Text="OpenAI API Key" />
                <TextBox Text="{Binding OpenAiApiKey, UpdateSourceTrigger=PropertyChanged}" Margin="0,6,0,12" />

                <TextBlock Text="Region" />
                <TextBox Text="{Binding Region, UpdateSourceTrigger=PropertyChanged}" Margin="0,6,0,12" />

                <TextBlock Text="OpenAI Model" />
                <TextBox Text="{Binding OpenAiModel, UpdateSourceTrigger=PropertyChanged}" Margin="0,6,0,12" />

                <CheckBox Content="Use local whisper.cpp" IsChecked="{Binding UseLocalWhisper}" Margin="0,6,0,12" />

                <TextBlock Text="Whisper Executable Path" />
                <TextBox Text="{Binding LocalWhisperExecutablePath, UpdateSourceTrigger=PropertyChanged}" Margin="0,6,0,12" />

                <TextBlock Text="Whisper Model Path" />
                <TextBox Text="{Binding LocalWhisperModelPath, UpdateSourceTrigger=PropertyChanged}" Margin="0,6,0,12" />

                <TextBlock Text="Language" />
                <TextBox Text="{Binding Language, UpdateSourceTrigger=PropertyChanged}" Margin="0,6,0,12" />

                <CheckBox Content="Include timestamps by default" IsChecked="{Binding IncludeTimestamps}" Margin="0,4,0,12" />

                <TextBlock Text="Default Output Format" />
                <ComboBox SelectedValue="{Binding DefaultFormat}" SelectedValuePath="Content" Margin="0,6,0,0">
                    <ComboBoxItem Content="txt" />
                    <ComboBoxItem Content="srt" />
                </ComboBox>
            </StackPanel>
        </ScrollViewer>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
            <Button Content="Cancel" Margin="0,0,8,0" Width="90" Command="{Binding CancelCommand}" />
            <Button Content="Save" Width="90" Command="{Binding SaveCommand}" />
        </StackPanel>
    </Grid>
</Window>
